.webmaster-menu
  background-color #ab0070
  font-weight 700
  font-family 'Lucida Grande', 'Lucida Sans Unicode', sans-serif
  font-size 14px
  ul
    &.menu
      & > li
        &:hover
          & > a
            background-color #510033
.clear
  clear both
body
  a
    color #999
    &:hover
      text-decoration none
      color #ccc
  td
    vertical-align middle
    padding 5px 6px
  input
    -webkit-box-sizing border-box /* Safari/Chrome, other WebKit */
    -moz-box-sizing border-box    /* Firefox, other Gecko */
    box-sizing border-box
.container
  min-height 600px
#wrap
  width 1024px

#navigation
  position relative
  height 80px
  top 0
  right 0
  margin-top 0
  #main-menu
    height 52px
    background #343434
    & > ul
      & > li
        & > a
          padding 10px 20px
          font-size 16px
    .nav-right
      float right
  #secondary-menu
    height 30px
    clear both
    background #999
    ul
      margin 0
      & > li
        list-style none
        float left
        height 30px
        & > a
          color #eaeaea
          padding 5px 12px 5px 8px
          font-weight bold
          display block
          font-size 11px

#navigation a:hover, #navigation a.active
  color #fff

#navigation #secondary-menu ul>li>a:hover, #navigation #secondary-menu ul>li>a.active-trail
  color #fff

  
.view-top-reviews, .view-tips-sidebar
  img
    display block
  td
    padding 2px 3px
  td.views-field.views-field-subject , .views-field-title
    font-size 12px
    a
      display block
    

  td.views-field.views-field-picture,td.views-field-field-image
    width 70px

.vendors-navigation
  ul
    margin 0px
    background #999
    & > li
      list-style none
      display inline-block
      height 30px
      width 14%
      position relative
      & > a
        display block
        padding 3px 10px
        color #ddd
        font-weight 700
        &:hover
          color #fff
      &:hover
        .sub-menu
          visibility visible
    &.sub-menu
      position absolute
      z-index 1
      min-width 130px
      visibility hidden
      li
        display block
        width auto
        min-height 30px
        height auto

.panel-2col-stacked, .panel-2col
  .panel-col-first
    width 75%
  .panel-col-last
    width 24.9%

.views-responsive-grid
  .views-column
    width 32%
    margin 3px 5px 8px 0
    display inline-block
    position relative
    height 230px
  &.views-columns-4
    .views-column
      width 23%
      padding 4px
      margin 3px 1px 1px 0
  &.views-columns-5
    .views-column
      width 18%
      height 170px
      margin 5px
      
.view-subpage-tips
  .views-field-field-image
    img
      width 230px
      height 230px
      display block
  .shadow
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0,0,0,0.7)
    visibility hidden
    opacity 0
    transition visibility 0s linear 0.3s,opacity 0.3s ease-in-out
  &:hover
    .shadow
      visibility visible
      opacity 1
      transition-delay 0s
    .views-field-title-field, .views-field-title
      background-color rgba(220,220,220,1)
      a
        color #666
  .views-field-ops
    position  absolute
    right 0
    z-index 5
  .views-field-title, .views-field-title-field, .views-field-title-field-et
    display block
    position absolute
    bottom 0
    left 0
    right 0
    padding 2px 10px
    height 30px
    z-index 1
    background-color rgba(160,160,160,0.6)
    font-weight 700
    transition background-color ease-in-out 0.3s
    a
      color white
      transition color ease-out 0.3s
.view-gallery
