.page-vendors .vendors-navigation
  ul.sub-menu
    height auto
    max-height 0
    transition max-height 0.5s ease-out,opacity 0.3s ease-out,top 0.3s ease-in-out
    opacity 0
    top 70px
    box-shadow 0px 1px 4px #888
  > li
    &:hover
      .sub-menu
        visibility visible
        max-height 500px
        opacity 1
.page-home #mini-panel-vendors_navigation
  height 470px
  .vendors-navigation
    border-bottom none
    ul.sub-menu
      border-top 1px solid #9f9a95
#mini-panel-vendors_navigation
  position relative
  
.vendors-navigation-bg
  position absolute
  width 100%
.vendors-navigation-bg 
  .shadow
    border-top 1px solid #82807d
    border-bottom 1px solid #9f9a95
