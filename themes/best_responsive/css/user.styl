
#logo
  clear both
  border-bottom 2px solid black
#navigation
  #main-menu
    border-bottom 1px solid white
    height 65px
    background #e6e5e4
    & > ul
      & > li
        & > a
          height 65px
          color black
          font 16px latoregular
          line-height 50px
        a:hover
          color pink
ul
  &.nav
    &.nav-login
      float right
      height 65px
.nav-login
  li
    &.login
      &:before
        margin 25px 0 0 0

.panel-left
  width 240px
  text-align center
  float left
  height 500px
  .avatar-wrapper
    margin 10px
    border 1px solid #ccc
    padding 10px 10px

  .username
    font-size 18px
    font-weight 600

  .wedding-day
    font-size 12px
.user-content-wrapper
  float left
  width 720px
  margin-top 10px
#main-content
  border-top 1px dotted black
  margin-top 2px

.panel-left
  width 230px
  .avatar-wrapper
    width 191px
    height 296px
    background #2a2a2a
  .username
    font 17px latoregular
    color white
    height 47px
    line-height 47px
  .wedding-day
    font 16px latolight
    color white
.user-content-wrapper
  width 860px

img
  &.avatar
    width 167px
    height 167px

ul
  &.primary
    li
      a
        background #2a2a2a
        font 14px latoregular
        width 143px
        height 47px
        margin 0px
        margin-top 7px
        color white
        line-height 48px
        text-align center
        border-top-right-radius 10px
        border-top-left-radius 10px
        border-right 1px solid #373737
        border-left 1px solid #373737
        transition margin-top 0.3s ease-out,height 0.3s ease-out,background-color 0.1s ease-out
        vertical-align bottom
        border-bottom 1px solid #8d8d8d
  &.tabs
    &.secondary
      background #e6e5e4
      height 47px
      li
        a
          height 47px
          font 14px latoregular
          line-height 47px
          color #2a2a2a
          padding 0px 23px

ul.primary li a:hover, ul.primary li a.active
  height 54px
  margin-top 0
  background pink
  color #2a2a2a
  border pink-border

ul.tabs.secondary li a.active, ul.tabs.secondary li a:hover
  background inherit
  color pink

.tabs-wrapper
  border-bottom none

.content
  margin-top 20px

.view-content
  border-top 2px solid #2A2A2a

.views-responsive-grid
  border-top 1px dotted #2a2a2a
  margin-top 2px
  padding 15px

.days-away
  font 16px latolight
  color pink
td
  &.views-field
    border-right none
    &.views-field-field-vendor-photo
      width 133px
      padding 9px 9px 9px 19px
      img
        width 107px
        height 111px
        display block
    &.views-field-subject
      a
        width 101px
        height 35px
        background black
        display inline-block
        color white
        line-height 35px
        text-align center
        margin 5px
        &:nth-child(3)
          background pink
          color black
        &:nth-child(1)
          display block
          background none

  &.fivestar-user-stars
    height 27px
    width 104px
    border 1px solid #e6e5e4
    margin 5px
    padding 5px 8px

tr
  background-color white
  border 1px solid #dedede



